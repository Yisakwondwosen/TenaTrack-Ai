{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "OIDC Payload Schema",
  "type": "object",
  "properties": {
    "iss": {
      "type": "string",
      "description": "Issuer Identifier for the OIDC Provider"
    },
    "sub": {
      "type": "string",
      "description": "Subject Identifier - unique user ID"
    },
    "aud": {
      "type": "string",
      "description": "Audience for which the token is intended"
    },
    "exp": {
      "type": "integer",
      "description": "Expiration time as UNIX timestamp"
    },
    "iat": {
      "type": "integer",
      "description": "Issued at time as UNIX timestamp"
    },
    "nonce": {
      "type": "string",
      "description": "Nonce value to associate a client session with the ID token"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User's email address"
    },
    "email_verified": {
      "type": "boolean",
      "description": "Whether the user's email is verified"
    },
    "name": {
      "type": "string",
      "description": "User's full name"
    },
    "preferred_username": {
      "type": "string",
      "description": "Preferred username"
    }
  },
  "required": ["iss", "sub", "aud", "exp", "iat"]
}
